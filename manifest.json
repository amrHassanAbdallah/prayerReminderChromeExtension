{
  "manifest_version": 3,
  "name": "PrayerTimes",
  "version": "2.1",
  "description": "An extension to remind you about the prayer times",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "storage",
    "activeTab",
    "scripting",
    "https://api.aladhan.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
